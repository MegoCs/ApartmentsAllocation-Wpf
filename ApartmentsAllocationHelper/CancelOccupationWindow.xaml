<Window x:Class="ApartmentsAllocationHelper.CancelOccupationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApartmentsAllocationHelper"
        mc:Ignorable="d"
        Title="الغاء حجز وحدة" Height="126" Width="643" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="Assets/12.ico" >
    <Grid Width="auto" Height="auto">
        <StackPanel FlowDirection="RightToLeft" Orientation="Horizontal" Width="auto" Height="auto">
            <Label Content="الرقم القومي للعميل" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Center"/>
            <TextBox FontSize="20" Name="clientNationalTxt" TextAlignment="Center" Height="30" Width="250" />
            <Button Name="showClientsGrid" Height="50" Content="عرض بيانات العملاء" Margin="10" Click="ShowClientsGrid_Click"/>
            <Button Name="confirmDeleteBtn" Height="50" Content="تأكيد عملية الغاء الحجز" HorizontalAlignment="Left" Margin="10" Click="ConfirmDeleteBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
